<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/lab_subj"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="@string/note_subject" />

    <EditText
        android:id="@+id/txt_subj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lab_subj"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/lab_subj"
        android:ems="10"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lab_content"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_subj"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@id/txt_content"
        android:text="@string/note_text" />

    <EditText
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_subj"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/lab_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textSize="12sp">

        <requestFocus />
    </EditText>

</RelativeLayout>